<h>以下の内容で、送信する。 </h>
<br><br>
<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p><%= @picture.content %></p>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>
  <p class="picture_submit"><%= form.submit  "投稿する" %></p>
<% end %>

<%= form_with(model: @picture, url: pictures_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p class="picture_submit"><%= form.submit  "戻る", name: 'back' %></p>
<% end %>
